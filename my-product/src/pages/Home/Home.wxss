.content .header {
  width: 100%;
  background: #fff;
}
.content .content_ {
  background: #fff;
  margin-bottom: 10px;
  padding: 10px 10px;
  box-sizing: border-box;
}
.content .content_ .header_content {
  display: flex;
  align-items: center;
}
.content .content_ .header_content .head {
  width: 45px;
  height: 45px;
  border-radius: 30px;
  overflow: hidden;
  background: #414141;
}
.content .content_ .header_content .username {
  padding-left: 10px;
}
.content .content_ .txt_content {
  padding: 10px 0;
  color: #353535;
  font-size: 15px;
}
.content .content_ .pic_content {
  border-radius: 7px;
  overflow: hidden;
  display: grid;
  grid-gap: 5px;
  grid-template-columns: repeat(3, 1fr);
}
.content .content_ .pic_content .pic_item {
  width: 100%;
  height: 100%;
  display: block;
}
.content .content_ .pic_content .pic_item image {
  width: 100%;
  height: 100%;
  display: block;
}
page {
  background: #f2f2f2;
}

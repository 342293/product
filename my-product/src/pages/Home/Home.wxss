.content {
  margin-top: 10px;
  box-sizing: border-box;
}
.content .content_item {
  width: 100%;
  margin-bottom: 10px;
  box-sizing: border-box;
  border-radius: 10px;
  background: #fff;
  padding: 10px 10px;
}
.content .content_item .head_content {
  display: flex;
  align-items: center;
}
.content .content_item .head_content .head {
  width: 40px;
  height: 40px;
  border-radius: 5px;
  overflow: hidden;
}
.content .content_item .head_content .head image {
  width: 100%;
  height: 100%;
  display: block;
}
.content .content_item .head_content .name {
  padding-left: 15px;
}
.content .content_item .content_txt {
  display: block;
  font-size: 14px;
  line-height: 25px;
  padding: 15px 0;
}
.content .content_item .thume_content {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 5px;
}
.content .content_item .thume_content .item {
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 5px;
  background: #f7f7f7;
}
.content .content_item .thume_content .item image {
  width: 100%;
  height: 100%;
  display: block;
}
.content .content_item .thume_content .item video {
  width: 100%;
  height: 100%;
}
